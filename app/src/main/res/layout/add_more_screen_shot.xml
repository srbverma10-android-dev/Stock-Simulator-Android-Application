<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/d_16"
    android:background="@drawable/white_dash_bg_secondary"

    android:layout_marginTop="@dimen/d_16"
    android:layout_marginStart="@dimen/d_16"

    >

    <ImageView
        android:id="@+id/screen_shot"

        android:contentDescription="@string/content_description"

        android:layout_width="0dp"
        android:layout_height="@dimen/d_200"

        android:src="@drawable/ic_round_add_circle_outline_24"

        android:scaleType="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>