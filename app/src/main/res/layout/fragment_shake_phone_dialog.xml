<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".report.dialogs.ReportDialogFragment"
        android:background="@drawable/white_background_round_corner"
        android:elevation="@dimen/d_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cancel_button"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:contentDescription="@string/content_description"
                android:paddingStart="@dimen/d_24"
                android:paddingTop="@dimen/d_24"

                android:paddingEnd="@dimen/d_24"
                android:paddingBottom="@dimen/d_24"
                android:src="@drawable/ic_cancel"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/shakePhoneImg"
                android:contentDescription="@string/content_description"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_shake_phone_img"

                android:layout_margin="@dimen/d_24"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/shake_phone_dialog_txt"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/s_20"
                android:fontFamily="@font/semi_cond_regular"
                android:textAlignment="center"
                android:gravity="center"

                app:layout_constraintTop_toBottomOf="@id/shakePhoneImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_margin="@dimen/d_16"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>


</layout>
